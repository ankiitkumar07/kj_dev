<!-- blog section -->
		<section id="blog">
			<div class="blog">
				<div class="container">
					<div class="row">
						<div class="post">
							<% @top_five_posts.each_slice(1) do |post| %>
								<% post.each do |post| %>
									<div class="post-box">
										<%= link_to '', post %>
										<div class="photo" style="background-image: url(<%= post.cover %>)">
											<div class="category">
												<p><%= post.tag_list.find{|e| /Destination/ =~e }=="Destination" ? "Destination" : (post.tag_list.find{|e| /Explore/ =~e }=="Explore" ? "On The Streets" : (post.tag_list.find{|e| /Going Religious/ =~e }=="Going Religious" ? "Going Religious" : (post.tag_list.find{|e| /Travel Tips/ =~e }=="Travel Tips" ? "Travel Tips" : "Miscellaneous"))) %></p>
											</div>
										</div>
										<div class="heading-and-excerpt">
											<div class="heading">
												<h2><%= post.title %></h2>
											</div>
											<div class="excerpt">
												<p><%= excerpt(post.body, ' ', radius: 100).html_safe %></p>
											</div>
										</div>
										<div class="date-and-user">
											<div>
												<p><%= post.created_at.strftime('%d %B, %y') %></p>
											</div>
											<div>
												<p><%= post.user.name %></p>
											</div>
										</div>		
									</div>
								<%end%>
							<%end%>
						</div>
					</div>

					<div class="row">
						<div class="col-md-12 text-center">
							<%= link_to 'See All My Posts', posts_path, class: 'btn btn-primary btn-lg' %>
						</div>
					</div>
				</div>
			</div>
		</section>

