<script>
$(document).ready(function(){
	$(window).on('scroll', function(){
		var si = $('.social-box');
		var sc = $(window).scrollTop();
		var th = $('#this-head').offset().top;
		var h = si.height();
		var winWidth = $(window).width();
		// $('#text').text(sc +' '+ th);
		if(winWidth > 768){
			if(sc> (th-h-10)){
				si.css({'right':'-6rem'});
			}else{
				si.css({'right':'6rem'});
			}
		}else{
			if(sc> (th-600)){
				si.css({'position':'absolute', 'bottom':'-4rem'});
			}else{
				si.css({'position':'fixed', 'bottom': '0.3rem', 'left':'20px'});
			}
		}
	})
})
</script>