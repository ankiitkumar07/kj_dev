<div class="container-fluid">
  <% if params[:tag] %>
    <div class="row">
      <div class="col-12 border-bottom border-dark pt-1">
        <h3 class="small-5 mt-3"> Posts Tagged With <%= params[:tag] %> <i class="fas fa-arrow-right"></i> </h3>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-10 justify-content-around" id="allPosts">
        <% @posts_with_tag.each_slice(1) do |post| %>
          <% post.each do |post| %>
              <div class="col-5 d-inline-block">
                <div class="grid-item h-400 collapsed one border border-grey">
                  <img src="<%= post.cover %>" alt="">
                  <div class="title">
                    <h3><%= post.title %></h3>
                    <p><%= excerpt(post.body, ' ', radius: 100).html_safe %></p>
                  </div>
                  <%= link_to "", post %>
                </div>
              </div>
          <% end %>
        <%end%>
      </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 text-right">
          <%= will_paginate @posts_with_tag, :previous_label => 'Newer Posts', :next_label => 'Older Posts', :container => false, renderer: BootstrapPagination::Rails %>
