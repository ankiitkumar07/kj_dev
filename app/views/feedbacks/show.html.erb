<p id="notice"><%= notice %></p>


<div class="container p-5">
    <div class="row py-5">
        <div class="col-2">Name:</div>
        <div class="col-3">
            <%= @feedback.name %>
        </div>
        <div class="col-2">Email:</div>
        <div class="col-3">
            <%= @feedback.email %> <a href="mailto:<%= @feedback.email %>" target="_blank" >Reply</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-7">
            <p><%= @feedback.message %></p>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-4">
            <%= link_to 'Edit', edit_feedback_path(@feedback) %>
        </div>
        <div class="col-4">
            <%= link_to 'Back', feedbacks_path %>
        </div>
        <div class="col-4">
            <a href="mailto:<%= @feedback.email %>" target="_blank" >Reply</a>
        </div>
    </div>
</div>

