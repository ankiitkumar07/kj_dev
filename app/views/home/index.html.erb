<!-- blog section -->
		<section id="blog">
			<div class="back">
				<div class="blurred">
				</div>
				<div class="front">
					<div class="container">
						<div class="row">
							<% @posts.each_slice(1) do |post| %>
								<% post.each do |post| %>
									<div class="col-md-4 col-sm-4">
										<div class="post-card">
											<div class="thumbnail" style="background-image:url(<%= post.cover %>)"></div>
											<hr></hr>
												<div class="post-title">
													<h2><%= post.title %></h2>
												</div>
											<hr></hr>
											<div class="row">
												<div class="col-md-6">
													<p class="h4 text-center" style="font-weight:lighter"><%= post.user.name %></p>
												</div>
												<div class="col-md-6">
													<p class="h4 text-center" style="font-weight:lighter"><%= post.created_at.strftime("%d/%m/%y") %></p>
												</div>
											</div>
										</div>
									</div>							
								<% end %>
							<% end %>
						</div>

						<div class="row">
							<div class="col-md-12 text-center">
								<%= link_to 'See All My Posts', posts_path, class: 'btn btn-primary btn-lg' %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

