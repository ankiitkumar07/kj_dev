<div class="social-integration">
	<div class="wrapper-for-social-button">
		<div class="fb-show" title="Like On Facebook"><i class="fa fa-thumbs-up"></i></div>
			<div class="extender fb-div">
				<div class="fb-like" data-href="http://www.kumarsjournal.com<%= request.fullpath %>" data-width="150" data-layout="box_count" data-action="like" data-size="large" data-show-faces="true" data-share="false"></div>
			</div>
	</div>
	<div class="wrapper-for-social-button">
	<div class="fb-share"><i class="fa fa-facebook"></i></div>
		<div class="extender fb-share-div">	
				<div class="fb-share-button" data-href="http://www.kumarsjournal.com<%= request.fullpath %>" data-layout="box_count" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.kumarsjournal.com<%=request.fullpath%>&amp;src=sdkpreparse">Share</a></div>
		</div>
	</div>
	<div class="wrapper-for-social-button">
	<div class="twitter-show" title="Tweet">
		<i class="fa fa-twitter"></i>
	</div>
	<div class="extender twitter-div">
		<a href="http://twitter.com/share" class="twitter-share-button" data-size="large" data-url="<%= post_url(@post) %>" data-text=" <%= @post.title %> " data-count="horizontal" data-via="Kumar's Journal">Tweet</a>
	</div>
	</div>
	<div class="wrapper-for-social-button">
	<div class="gplus-show" title="Share On Google+">
		<i class="fa fa-google-plus"></i>
	</div>
	<div class="extender gplus-div">
		<div id="gplus">
			<div class="g-plus" data-action="share" data-annotation="bubble" data-height="24" ></div>
		</div>
	</div>
	</div>
</div>


<div class="follow follow-fb">
	<div class="fb-follow" data-href="https://www.facebook.com/ankiitkumar07" data-layout="button_count" data-size="large" data-show-faces="true"></div>
</div>
<div class="follow follow-twitter">
	<a class="twitter-follow-button" href="https://twitter.com/meAnkitKumar" data-show-count="true" data-size="large" data-show-screen-name="false"></a>
</div>
<div class="follow follow-gplus">
	<div class="g-follow" data-annotation="bubble" data-height="24" data-href="//plus.google.com/u/0/102488716494488744951" data-rel="author"></div>
</div>
<div class="follow follow-youtube">
	<div class="g-ytsubscribe" data-channelid="UCotDnRWLtjJ4QGDlxTb8TQA" data-layout="default" data-theme="dark" data-count="default"></div>
</div>



<script src="https://apis.google.com/js/platform.js" async defer></script>
<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
<script type="text/javascript" src="https://platform.twitter.com/widgets.js"></script>
		  

